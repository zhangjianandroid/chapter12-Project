<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">

    <!--使用 cirelImageView 将正方形图片圆形化-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/c12d3_header_nav_icon"
        android:src="@drawable/nav_icon"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c12d3_header_username"
        android:layout_alignParentBottom="true"
        android:text="3273376405@qq.com"
        android:textColor="#FFF"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c12d3_header_mail"
        android:layout_above="@id/c12d3_header_username"
        android:text="Tony ZJ"
        android:textColor="#FFF"
        android:textSize="15sp"
        />
</RelativeLayout>